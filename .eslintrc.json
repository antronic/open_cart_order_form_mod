{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],

    "rules": {
        "no-unexpected-multiline": [0],
        "react/jsx-uses-vars": [2],
        "react/jsx-uses-react": [2],

        "no-console": [1],

        "no-unused-vars": [1],
        "indent": [
            "error",
            2,
            {
              "SwitchCase": 1
            }
        ],
        "no-empty": [1],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}